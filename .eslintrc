{
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest/globals": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:jest/recommended"
	],
	"rules": {
		"no-cond-assign": 0,
		"no-fallthrough": [
			"error",
			{
				"commentPattern": "break omitted"
			}
		]
	},
	"plugins": [
		"jest"
	]
}
